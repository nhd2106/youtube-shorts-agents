{
  "name": "youtube-shorts-agents",
  "version": "1.0.0",
  "description": "YouTube Shorts Generator",
  "main": "dist/app.js",
  "bin": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "test": "jest",
    "pkg": "pkg . --targets node18-macos-x64,node18-win-x64,node18-linux-x64 --output bin/youtube-shorts-agent",
    "pkg:macos-arm": "pkg . --targets node18-macos-arm64 --output bin/youtube-shorts-agent-macos-arm64"
  },
  "pkg": {
    "assets": [
      "dist/**/*",
      "templates/**/*",
      "assets/**/*",
      "node_modules/axios/dist/**/*",
      "node_modules/@google-cloud/**/*",
      "node_modules/googleapis/**/*",
      "node_modules/groq-sdk/**/*",
      "node_modules/openai/**/*",
      "node_modules/together-ai/**/*"
    ],
    "outputPath": "bin",
    "scripts": [
      "dist/**/*.js"
    ],
    "targets": [
      "node18-macos-arm64"
    ],
    "externals": [
      "@ffmpeg-installer/ffmpeg",
      "fluent-ffmpeg",
      "sharp",
      "node-whisper",
      "nodejs-whisper",
      "whisper-node",
      "axios",
      "@google-cloud/text-to-speech",
      "googleapis",
      "groq-sdk",
      "openai",
      "together-ai",
      "edge-tts",
      "@andresaya/edge-tts",
      "microsoft-cognitiveservices-speech-sdk"
    ]
  },
  "dependencies": {
    "@andresaya/edge-tts": "^1.2.4",
    "@aws-sdk/client-s3": "^3.758.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/text-to-speech": "^5.0.1",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "edge-tts": "^1.0.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^146.0.0",
    "groq-sdk": "^0.15.0",
    "jimp": "^0.22.10",
    "microsoft-cognitiveservices-speech-sdk": "^1.34.0",
    "node-whisper": "^2024.11.13",
    "nodejs-whisper": "^0.2.6",
    "openai": "^4.26.0",
    "sharp": "^0.33.2",
    "together-ai": "^0.12.0",
    "uuid": "^9.0.1",
    "whisper-node": "^1.1.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.10",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
